{
    "app-id" : "org.kuchelmeister.ToolbxTuner",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "toolbxtuner",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : []
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "toolbx-tuner",
            "builddir" : true,
            "buildsystem": "meson",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/toolbx-tuner/cargo"
                }
            },
            "config-opts": [
                "-Dprofile=flathub"
            ],
            "sources" : [
                {
                    "type": "dir",
                    "path": "../toolbx-tuner"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
